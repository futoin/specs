{
  "name": "@futoin/specs",
  "version": "2019.1102.1",
  "vcs": "git",
  "rms": "npm",
  "rmsRepo": "ignored",
  "toolTune": {
    "npm": {
      "access": "public"
    }
  },
  "tools": {
    "python": "3",
    "pip": "*",
    "node": "*",
    "yarn": "*",
    "gzip": "*"
  },
  "entryPoints": {
    "frontend": {
      "tool": "nginx",
      "path": "/"
    }
  },
  "webcfg": {
    "root": "/",
    "mounts": {
      "/": {
        "static": true,
        "tune": {
          "autoindex": true,
          "staticGzip": false,
          "etag": true,
          "expires": "off"
        }
      },
      "/draft/": {
        "static": true,
        "tune": {
          "autoindex": true,
          "staticGzip": true,
          "etag": true,
          "expires": "off"
        }
      },
      "/final/": {
        "static": true,
        "tune": {
          "autoindex": true,
          "staticGzip": true,
          "etag": true,
          "expires": "off"
        }
      }
    }
  },
  "actions": {
    "build": [
      "./compile.sh",
      "@cid tool build gzip"
    ],
    "upgrade-deps": [
      "@cid tool update",
      "@cid tool exec yarn -- upgrade --latest"
    ]
  }
}
