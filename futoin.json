{
  "vcs": "git",
  "name": "specs",
  "tools" : {
    "python" : "3",
    "pip" : "*",
    "node" : "*",
    "yarn" : "*",
    "gzip" : "*"
  },
  "entryPoints": {
    "frontend": {
      "tool": "nginx",
      "path": ""
    }
  },
  "webcfg": {
    "mounts": {
      "/": {
        "static" : true,
        "tune": {
          "autoindex" : true,
          "staticGzip": false,
          "etag" : true,
          "expires" : "off"
        }
      },
      "/draft/": {
        "static" : true,
        "tune": {
          "autoindex" : true,
          "staticGzip": true,
          "etag" : true,
          "expires" : "off"
        }
      },
      "/final/": {
        "static" : true,
        "tune": {
          "autoindex" : true,
          "staticGzip": true,
          "etag" : true,
          "expires" : "off"
        }
      }
    }
  },
  "actions": {
    "build": [
        "./compile.sh",
        "@cid tool build gzip"
    ],
    "upgrade-deps": [
      "@cid tool update",
      "@cid tool exec yarn -- upgrade --latest"
    ]
  }
}
