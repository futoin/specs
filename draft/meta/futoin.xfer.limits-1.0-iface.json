{
  "iface": "futoin.xfer.limits",
  "version": "1.0",
  "ftn3rev": "1.7",
  "imports": [
    "futoin.ping:1.0",
    "futoin.xfer.types:1.0"
  ],
  "types": {
    "LimitXferCount": {
      "type": "integer",
      "min": 0
    },
    "LimitValues": {
      "type": "map"
    },
    "LimitGroups": {
      "type": "array",
      "elemtype": "LimitGroup"
    }
  },
  "funcs": {
    "setLimits": {
      "params": {
        "group": "LimitGroup",
        "domain": "LimitDomain",
        "hard": "LimitValues",
        "check": "LimitValues",
        "risk": "LimitValues"
      }
    },
    "getLimits": {
      "params": {
        "group": "LimitGroup",
        "domain": "LimitDomain"
      },
      "result": {
        "hard": "LimitValues",
        "check": "LimitValues",
        "risk": "LimitValues"
      }
    },
    "getLimitGroups": {
      "result": "LimitGroups"
    },
    "setHolderLimits": {
      "params": {
        "holder": "AccountHolderID",
        "domain": "LimitDomain",
        "soft": "LimitValues",
        "check": "LimitValues"
      }
    },
    "getHolderLimits": {
      "params": {
        "holder": "AccountHolderID",
        "domain": "LimitDomain"
      },
      "result": {
        "check": "LimitValues",
        "soft": "LimitValues"
      }
    }
  },
  "requires": [
    "SecureChannel"
  ]
}