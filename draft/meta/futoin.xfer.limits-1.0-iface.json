{
  "iface": "futoin.xfer.limits",
  "version": "1.0",
  "ftn3rev": "1.7",
  "imports": [
    "futoin.ping:1.0",
    "futoin.xfer.types:1.0"
  ],
  "types": {
    "LimitXferCount": {
      "type": "integer",
      "min": 0
    },
    "LimitValues": {
      "type": "map",
      "fields": {
        "nbl": "Balance",
        "dal": "Amount",
        "wal": "Amount",
        "mal": "Amount",
        "dtl": "Amount",
        "wtl": "Amount",
        "mtl": "Amount",
        "dtc": "LimitXferCount",
        "wtc": "LimitXferCount",
        "mtc": "LimitXferCount",
        "dlh": "LimitXferCount",
        "dmc": "LimitXferCount"
      }
    },
    "LimitGroups": {
      "type": "array",
      "elemtype": "LimitGroup"
    }
  },
  "funcs": {
    "setLimits": {
      "params": {
        "group": "LimitGroup",
        "domain": "LimitDomain",
        "hard": "LimitValues",
        "risk": "LimitValues",
        "system": "LimitValues"
      }
    },
    "getLimits": {
      "params": {
        "group": "LimitGroup",
        "domain": "LimitDomain"
      },
      "result": {
        "hard": "LimitValues",
        "risk": "LimitValues",
        "system": "LimitValues"
      }
    },
    "getLimitGroups": {
      "result": "LimitGroups"
    },
    "setHolderLimits": {
      "params": {
        "holder": "AccountHolderID",
        "domain": "LimitDomain",
        "check": "LimitValues",
        "soft": "LimitValues"
      }
    },
    "getHolderLimits": {
      "params": {
        "holder": "AccountHolderID",
        "domain": "LimitDomain"
      },
      "result": {
        "check": "LimitValues",
        "soft": "LimitValues"
      }
    }
  },
  "requires": [
    "SecureChannel"
  ]
}