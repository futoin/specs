{
  "iface": "futoin.xfer.gaming",
  "version": "1.0",
  "ftn3rev": "1.7",
  "imports": [
    "futoin.ping:1.0",
    "futoin.xfer.types:1.0"
  ],
  "types": {
    "RelatedBetPH": {
      "type": "enum",
      "items": [
        "%FreeSpin%",
        "%Prize%",
        "%Award%"
      ]
    },
    "RelatedBet": [
      "XferID",
      "RelatedBetPH"
    ]
  },
  "funcs": {
    "bet": {
      "params": {
        "user": "AccountHolderExternalID",
        "rel_account": "AccountID",
        "currency": "CurrencyCode",
        "amount": "Amount",
        "ext_id": "XferExtId",
        "ext_info": "XferExtInfo",
        "orig_ts": "XferTimestamp"
      },
      "result": {
        "xfer_id": "XferID",
        "balance": "Balance",
        "bonus_part": "Amount"
      },
      "throws": [
        "UnknownHolderID",
        "CurrencyMismatch",
        "OutOfBalance",
        "LimitReject",
        "AlreadyCanceled",
        "OriginalTooOld",
        "OriginalMismatch"
      ]
    },
    "cancelBet": {
      "params": {
        "user": "AccountHolderExternalID",
        "rel_account": "AccountID",
        "currency": "CurrencyCode",
        "amount": "Amount",
        "ext_id": "XferExtId",
        "ext_info": "XferExtInfo",
        "orig_ts": "XferTimestamp"
      },
      "result": {
        "balance": "Balance"
      },
      "throws": [
        "UnknownHolderID",
        "CurrencyMismatch",
        "OriginalTooOld",
        "OriginalMismatch"
      ]
    },
    "win": {
      "params": {
        "user": "AccountHolderExternalID",
        "rel_account": "AccountID",
        "currency": "CurrencyCode",
        "amount": "Amount",
        "rel_bet": "RelatedBet",
        "ext_id": "XferExtId",
        "ext_info": "XferExtInfo",
        "orig_ts": "XferTimestamp"
      },
      "result": {
        "xfer_id": "XferID",
        "balance": "Balance",
        "bonus_part": "Amount"
      },
      "throws": [
        "UnknownHolderID",
        "CurrencyMismatch",
        "LimitReject",
        "OriginalTooOld",
        "OriginalMismatch"
      ]
    },
    "gameBalance": {
      "params": {
        "user": "AccountHolderExternalID",
        "currency": "CurrencyCode"
      },
      "result": {
        "balance": "Balance"
      },
      "throws": [
        "UnknownHolderID",
        "UnknownCurrency",
        "CurrencyMismatch"
      ]
    }
  },
  "requires": [
    "SecureChannel"
  ]
}